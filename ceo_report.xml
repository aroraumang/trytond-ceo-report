<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.action.report" id="ceo_report">
            <field name="name">CEO Report</field>
            <field name="model"></field>
            <field name="report_name">ceo.report</field>
            <field name="report">ceo_report/ceo_report.html</field>
        </record>
        <record model="ir.ui.view" id="ceo_report_view_form">
            <field name="model">ceo.report.generate.start</field>
            <field name="type">form</field>
            <field name="name">ceo_report_form</field>
        </record>
        <record model="ir.action.wizard" id="wizard_generate_ceo_report">
            <field name="name">CEO Report</field>
            <field name="wiz_name">ceo.report.generate</field>
        </record>
        <menuitem name="CEO Report" parent="ir.menu_administration" id="menu_ceo_report"/>
        <menuitem parent="menu_ceo_report"
            action="wizard_generate_ceo_report"
            id="menu_generate_ceo_report" icon="tryton-spreadsheet"
            sequence="100"/>
        <record model="ir.ui.view" id="ceo_report_configuration_view_form">
            <field name="model">ceo.report.configuration</field>
            <field name="type">form</field>
            <field name="name">ceo_report_configuration_form</field>
        </record>
        <record model="ir.action.act_window"
            id="act_ceo_report_configuration_form">
            <field name="name">Configuration</field>
            <field name="res_model">ceo.report.configuration</field>
            <field name="context"></field>
        </record>
        <record model="ir.action.act_window.view"
            id="act_ceo_report_configuration_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view" ref="ceo_report_configuration_view_form"/>
            <field name="act_window" ref="act_ceo_report_configuration_form"/>
        </record>
        <menuitem parent="menu_ceo_report"
            action="act_ceo_report_configuration_form"
            id="menu_ceo_report_configuration" icon="tryton-preferences"
            sequence="90"/>

        <record id="ceo_report_receivers" model="res.group">
            <field name="name">CEO Report receivers</field>
        </record>
        <record model="ir.cron" id="cron_ceo_report">
            <field name="name">CEO Report Email Cron</field>
            <field name="request_user" ref="res.user_admin"/>
            <field name="user" ref="res.user_trigger"/>
            <field name="active" eval="True"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="number_calls">-1</field>
            <field name="repeat_missed" eval="False"/>
            <field name="model">ceo.report.configuration</field>
            <field name="function">send_email</field>
        </record>
    </data>
</tryton>
